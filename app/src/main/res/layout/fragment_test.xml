<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="16dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Test"
        android:fontFamily="@font/robotobold"
        android:textColor="#FFF"
        android:textSize="26sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Miejsce w którym sprawdzisz swoje umiejętności i będziesz rozwiązywał zadania porównując czas z każdym następnym rozwiązaniem"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/trach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_item"
        android:orientation="horizontal"
        android:padding="12dp"

        >


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_trachtenberg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotobold"
                android:text="Trachtenberg"
                android:textColor="#4a4a4a"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:text="Test z iloczyńow Trachtenberga"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/highscore1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:text="Highscore 0"
                android:textColor="#4a4a4a"
                android:textSize="14sp"


                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_wed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_item"
        android:orientation="horizontal"
        android:padding="12dp"

        >


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_wed" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matematyka Wedyjska"
                android:textColor="#4a4a4a"
                android:fontFamily="@font/robotobold"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test losowy z matematyki wedyjskiej."
                android:textColor="#999999"
                android:fontFamily="@font/robotomedium"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/highscore6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highscore 0"
                android:fontFamily="@font/robotomedium"
                android:textColor="#4a4a4a"
                android:textSize="14sp"


                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/button_compare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_item"
        android:orientation="horizontal"
        android:padding="12dp"

        >



        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_general"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Ogólny"
                android:fontFamily="@font/robotobold"
                android:textColor="#4a4a4a"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test losowy z matematyki wedyjskiej i Trachtenberga."
                android:textColor="#999999"
                android:fontFamily="@font/robotomedium"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/highscore7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highscore 0"
                android:fontFamily="@font/robotomedium"
                android:textColor="#4a4a4a"
                android:textSize="14sp"


                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/button_best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="25dp"

        android:background="@drawable/bg_item"
        android:orientation="horizontal"
        android:padding="12dp"

        >





        <LinearLayout

            android:id="@+id/button_bestscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Najlepsze wyniki"

                android:fontFamily="@font/robotobold"
                android:textColor="#4a4a4a"
                android:textSize="18sp" />






                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

    

