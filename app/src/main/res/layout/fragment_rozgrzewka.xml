<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    android:padding="8dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_start"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:fontFamily="@font/robotobold"
        android:shadowRadius="@android:integer/config_longAnimTime"
        android:text="Start"
        android:background="#546de5"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/prog_timer"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:max="30"
        android:progress="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="Widok"
        android:textSize="26dp"
        android:fontFamily="@font/robotomedium"
        android:textColor="#8a8a8a"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/prog_timer"/>
    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Widok"
        android:textSize="26dp"
        android:fontFamily="@font/robotomedium"
        android:textColor="#8a8a8a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prog_timer"/>

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8a8a8a"
        android:text="Widok"
        android:textSize="26dp"
        android:fontFamily="@font/robotomedium"
        app:layout_constraintEnd_toStartOf="@+id/textViewScore"
        app:layout_constraintStart_toEndOf="@+id/textViewTime"
        app:layout_constraintTop_toBottomOf="@+id/prog_timer" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewQuestion">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/rb1"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="#786fa6"
                android:layout_weight="1"
                android:textSize="26dp"
                android:fontFamily="@font/robotobold"
                android:text="Button" />

            <Button
                android:id="@+id/rb2"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:textSize="26dp"
                android:fontFamily="@font/robotobold"
                android:background="#f8a5c2"
                android:layout_weight="1"
                android:text="Button" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/rb3"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:textSize="26dp"
                android:fontFamily="@font/robotobold"
                android:background="#574b90"
                android:text="Button" />

            <Button
                android:id="@+id/rb4"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="#f78fb3"
                android:textSize="26dp"
                android:fontFamily="@font/robotobold"
                android:layout_weight="1"
                android:text="Button" />
        </TableRow>


    </TableLayout>

    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="#8a8a8a"
        android:text="Widok"
        android:textSize="26dp"
        android:fontFamily="@font/robotomedium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>

    

