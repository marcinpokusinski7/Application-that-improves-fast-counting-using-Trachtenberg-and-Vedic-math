<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="16dp">



    <TextView
        android:id="@+id/text_view_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotobold"
        android:freezesText="true"
        android:text="Wynik 0"
        android:textColor="#AAAAAA" />

    <TextView
        android:id="@+id/text_view_question_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_score"
        android:fontFamily="@font/robotobold"
        android:freezesText="true"
        android:text="Pytanie: 1/10"
        android:textColor="#AAAAAA" />

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="00:30"
        android:textColor="#AAAAAA"
        android:textSize="40sp"
        android:freezesText="true" />

    <TextView
        android:id="@+id/text_view_kategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_question_count"
        android:fontFamily="@font/robotobold"
        android:freezesText="true"
        android:text="Kategoria: Trachtenberg"
        android:textColor="#AAAAAA" />

    <TextView
        android:id="@+id/text_view_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radio_group"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/robotoregular"
        android:freezesText="true"
        android:text="tu bedzie pytanie \ntu bedzie pytanie \ntu bedzie pytanie"
        android:textAlignment="center"
        android:textColor="#AAAAAA"
        android:textSize="20sp" />


    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:layout_centerVertical="true">

        <RadioButton
            android:id="@+id/radio_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotomedium"
            android:freezesText="true"
            android:textSize="25dp"
            android:textColor="#AAAAAA"
            android:text="Opcja 1" />

        <RadioButton
            android:id="@+id/radio_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotomedium"
            android:freezesText="true"
            android:textColor="#AAAAAA"
            android:textSize="25dp"
            android:text="Opcja 2" />

        <RadioButton
            android:id="@+id/radio_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotomedium"
            android:freezesText="true"
            android:textColor="#AAAAAA"
            android:textSize="25dp"
            android:text="Opcja 3" />

        <RadioButton
            android:id="@+id/radio_button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotomedium"
            android:freezesText="true"
            android:textColor="#AAAAAA"
            android:textSize="25dp"
            android:text="Opcja 4" />
    </RadioGroup>

    <Button
        android:id="@+id/button_confirm_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_group"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/robotomedium"
        android:freezesText="true"
        android:text="PotwierdÅ¼">

    </Button>
    </RelativeLayout>



