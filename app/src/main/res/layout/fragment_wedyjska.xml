                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_plusjeden"
                        android:layout_alignParentEnd="true"/>



                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
