<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="16dp">



    <TextView
        android:id="@+id/text_view_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotobold"
        android:freezesText="true"
        android:text="Wynik 0"
        android:textColor="#AAAAAA" />

    <TextView
        android:id="@+id/text_view_question_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_score"
        android:fontFamily="@font/robotobold"
        android:freezesText="true"
        android:text="Pytanie: 1/10"
        android:textColor="#AAAAAA" />

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="00:30"
        android:textColor="#AAAAAA"
        android:textSize="40sp"
        android:freezesText="true" />

    <TextView
        android:id="@+id/text_view_kategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_question_count"
        android:fontFamily="@font/robotobold"
        android:freezesText="true"
        android:text="Kategoria: Ogólny"
        android:textColor="#AAAAAA" />

    <TextView
        android:id="@+id/text_view_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_kategoria"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/robotoregular"
        android:freezesText="true"
        android:text="tu bedzie pytanie \ntu bedzie pytanie \ntu bedzie pytanie"
        android:textAlignment="center"
        android:textColor="#AAAAAA"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_below="@+id/text_view_question"
        android:id="@+id/rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/Et_text"
            android:textColorLink="#000000"
            android:layout_width="match_parent"
            android:textColor="#AAAAAA"
            android:layout_marginTop="15dp"
            android:backgroundTint="@android:color/white"
            android:textColorHint="@android:color/white"
            android:drawableTint="@android:color/white"
            android:textCursorDrawable="@null"
            android:inputType="number|phone"
            android:fontFamily="@font/robotoregular"
            android:layout_height="wrap_content"></EditText>
        <TextView
            android:id="@+id/Et_result"
            android:layout_below="@+id/Et_text"
            android:layout_width="match_parent"
            android:text=""
            android:textAlignment="center"
            android:fontFamily="@font/robotoregular"
            android:layout_marginTop="39dp"
            android:textColor="#AAAAAA"
            android:textSize="24sp"
            android:layout_height="wrap_content"></TextView>

    </RelativeLayout>
<FrameLayout
    android:id="@+id/frame"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"></FrameLayout>
    <Button
        android:id="@+id/button_confirm_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame"
        android:fontFamily="@font/robotomedium"
        android:freezesText="true"
        android:text="Potwierdż">

    </Button>
</RelativeLayout>





